@model MDM.WebPortal.Models.Identity.EditUserViewModel

@{
    ViewBag.Title = "Edit";
}

<header class="main-header">
    <div class="container">
        <h1 class="page-title">Accounts</h1>
        <ol class="breadcrumb pull-right">
            <li><a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i> Home</a></li>
            <li><a href="@Url.Action("Index")"> Users</a></li>
            <li class="active">Update</li>
        </ol>
    </div>
</header>

<div class="admin-container">
    <div class="row">       
        <div class="col-md-offset-2 col-md-9">
            <div class="panel panel-primary box-panel-admin">
                <div class="panel-heading"><strong class="text-center">UPDATE ACCOUNT FORM</strong></div>
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.Id)

                            <div class="form-group">
                                @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Email)
                                </div>
                            </div>
                            <div class="form-group">

                                <div class="col-md-offset-2 col-md-10">
                                    <fieldset class="scheduler-border">
                                        <legend class="scheduler-border">User Role</legend>
                                        @foreach (var item in Model.RolesList)
                                        {
                                            <div class="radio">
                                                <input type="radio" name="SelectedRole" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                                                @Html.Label(item.Value)
                                            </div>

                                        }

                                    </fieldset>

                                </div>
                            </div>

                            <div class="text-center">
                                <div class="form-group">
                                    <button type="submit" value="Save" class="btn btn-sm btn-primary">
                                        <i class="fa fa-cloud-upload"></i> Save
                                    </button>
                                    <a href="@Url.Action("Index")" class="btn btn-sm btn-danger">
                                        <i class="fa fa-hand-o-left"></i> Cancel
                                    </a>
                                </div>
                            </div>

                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>







