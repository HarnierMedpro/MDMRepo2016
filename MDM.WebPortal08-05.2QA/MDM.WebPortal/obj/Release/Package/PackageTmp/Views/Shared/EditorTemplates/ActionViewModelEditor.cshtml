@model MDM.WebPortal.Models.ViewModel.VMActionSystem
@{
    //required in order to render validation attributes
    ViewContext.FormContext = new FormContext();
}

<div class="k-edit-label">
    @(Html.LabelFor(model => model.ControllerID))
</div>
<div data-container-for="title" class="k-edit-field">
    @(Html.Kendo().DropDownListFor(x => x.ControllerID)
          .DataTextField("Cont_Name") 
          .DataValueField("ControllerID")
          .MinLength(2) 
          .Filter(FilterType.Contains)
          .BindTo((IEnumerable<MDM.WebPortal.Models.ViewModel.VMControllerSystem>) ViewData["Controllers"]) 
          .HtmlAttributes(new {style = "border-radius: 3px !important; width:100%;"}))
</div>

<div class="k-edit-label">
    @(Html.LabelFor(model => model.Act_Name))
</div>
<div data-container-for="title" class="k-edit-field">
    @(Html.TextBoxFor(model => model.Act_Name, new { @class = "k-textbox", style = "border-radius: 3px !important; width:100%;" }))
   
</div>