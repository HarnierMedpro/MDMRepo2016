@using System.Collections
@model MDM.WebPortal.Areas.ADP.Models.VMAdp_Edgemed


<div class="container-fluid">
    
            <fieldset class="scheduler-border">
                <legend class="scheduler-border text-uppercase text-bold">edgemed_logons:</legend>
                <dl>
                    <dt>
                        @(Html.LabelFor(model => model.ADPMasterID)):
                    </dt>
                    <dd>
                        @(Html.Kendo().DropDownListFor(x => x.ADPMasterID)
                           .Name("Employee")
                           .ValuePrimitive(true)
                           .OptionLabel("Select Employee...")
                           .DataTextField("INFO")
                           .DataValueField("ADPMasterID")
                           .HtmlAttributes(new { style = "width:100%;" })
                           .BindTo((IEnumerable)ViewData["ADP"]) //Server Binding
                         )
                        @Html.ValidationMessageFor(m => m.ADPMasterID)
                    </dd>
                </dl>

                <dl>
                    <dt>
                        @(Html.LabelFor(model => model.Edgemed_UserName)):
                    </dt>
                    <dd>
                        @(Html.EditorFor(model => model.Edgemed_UserName, new { htmlAttributes = new { style = "width:100%; border-radius:3px !important; height:28.81px;" } }))
                        @Html.ValidationMessageFor(m => m.Edgemed_UserName)
                    </dd>
                </dl>

                <dl>
                    <dt>
                        @(Html.LabelFor(model => model.Zno)):
                    </dt>
                    <dd>
                        @(Html.EditorFor(model => model.Zno, new { htmlAttributes = new { style = "width:100%; border-radius:3px !important; height:28.81px;" } }))
                        @Html.ValidationMessageFor(m => m.Zno)
                    </dd>
                </dl>

                <dl>
                    <dt>
                        @(Html.LabelFor(model => model.EdgeMed_ID)):
                    </dt>
                    <dd>
                        @(Html.EditorFor(model => model.EdgeMed_ID, new { htmlAttributes = new { style = "width:100%; border-radius:3px !important; height:28.81px;" } }))
                        @Html.ValidationMessageFor(m => m.EdgeMed_ID)
                    </dd>
                </dl>

                <dl>
                    <dd>
                        @(Html.Kendo().CheckBoxFor(x => x.Active))
                    </dd>
                </dl>

            </fieldset>
       
</div>