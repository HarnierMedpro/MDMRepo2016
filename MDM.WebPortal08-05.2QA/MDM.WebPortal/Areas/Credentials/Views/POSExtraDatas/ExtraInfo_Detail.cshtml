@using Kendo.Mvc.UI
@model IEnumerable<MDM.WebPortal.Areas.Credentials.Models.ViewModel.VMPOSLOCExtraData>

@{
    Layout = null;
    int pos = ViewBag.MasterPOS;
}

<div class="container-fluid">
    <a id="@pos" class="k-button k-button-icontext k-add-button" href="javascript:void(0);" onclick="saveInfo(this.id)"><span class="k-icon k-add"></span>NEW</a>
    <br/>
    <br/>
    @(Html.Kendo().ListView<MDM.WebPortal.Areas.Credentials.Models.ViewModel.VMPOSLOCExtraData>(Model)
          .Name("lvInfo_"+pos)
          .TagName("div")
          .ClientTemplateId("lvInfo_template")
          .DataSource(dataSource => dataSource
              .Events(ev => ev.Error("extraInfoDetailErrorHandler"))
              .Model(model => model.Id("POSExtraDataID"))
              .PageSize(1)
              .Create(create => create.Action("Create_ExtraData", "POSExtraDatas", new { ParentID = pos }))
              .Update(update => update.Action("Update_ExtraData", "POSExtraDatas"))
            )
          .Editable(ed => ed.TemplateName("POSExtInfoViewModelEditor"))
    )
</div>

