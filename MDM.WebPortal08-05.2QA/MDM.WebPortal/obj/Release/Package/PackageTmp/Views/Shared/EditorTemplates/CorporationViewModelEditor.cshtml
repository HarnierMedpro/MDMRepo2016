                        @Html.ValidationMessageFor(m => m.Contacts)
                    </dt>
                </dl>*@

                <dl>
                    <dd>
                        @Html.LabelFor(x => x.DBs)
                    </dd>
                    <dt>
                        @Html.EditorFor(x => x.DBs)
                        @Html.ValidationMessageFor(m => m.DBs)
                    </dt>
                </dl>

            </fieldset>
       
</div>