<header class="main-header">
    <div class="container">
        <h1 class="page-title"></h1>
        <ol class="breadcrumb pull-right">
            <li><a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i> Home</a></li>
            <li><a href="@Url.Action("Index")"> Roles</a></li>
            <li class="active">New</li>
        </ol>
    </div>
</header>

<div class="admin-container">
    <div class="row">
        <div class="col-md-offset-2 col-md-8">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    <a href="#" class="close" data-dismiss="alert" aria-label="Close">&times;</a>
                    <p>@ViewBag.Error</p>
                </div>
            }
            <div class="panel panel-primary box-panel-admin">
                <div class="panel-heading"><strong>NEW ROLE</strong>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <hr/>
                            @Html.ValidationSummary(true)

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <label class="control-label">Role <sup class="text-danger">*</sup></label>
                                            @Html.TextBoxFor(model => model.Name, new { id = "tbName", @class = "form-control" })
                                            @*@Html.ValidationMessageFor(model => model.Name)*@
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <label class="control-label">Priority <sup class="text-danger">*</sup></label>
                                            @Html.DropDownList("Priority", a, htmlAttributes: new{@class="form-control"})
                                        </div>
                                    </div>
                                </div>
                            </div>

                           

                            <div class="text-center">
                                <div class="form-group">
                                    <button type="submit" value="Create" class="btn btn-sm btn-primary" onclick="return CheckRequired();">
                                        <i class="fa fa-cloud-upload"></i> Create
                                    </button>
                                    <a href="@Url.Action("Index")" class="btn btn-sm btn-danger">
                                        <i class="fa fa-hand-o-left"></i> Back to List
                                    </a>
                                </div>
                            </div>


                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script src="~/Scripts/lib/Notify/notify.min.js"></script>
<script>
    function CheckRequired() {
        if ($.trim($('#tbName').val()).length == 0) {
            $('#tbName').notify("This field is required!", { position: "bottom left" });
            $('#tbName').focus();
        }
    }
</script>