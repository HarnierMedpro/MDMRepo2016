@model MDM.WebPortal.Models.FromDB.Corp_Owner

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout1.cshtml";
    var owner = (List<SelectListItem>)ViewBag.OwnersID;
    var corp = (SelectList)ViewBag.corpID;
}

<header class="main-header">
    <div class="container">
        <h1 class="page-title"></h1>
        <ol class="breadcrumb pull-right">
            <li><a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i> Home</a></li>
            <li><a href="@Url.Action("Index")"> Corp_Owners</a></li>
            <li class="active">Update</li>
        </ol>
    </div>
</header>
<div class="admin-container">
    <div class="row">
        <div class="col-md-offset-1 col-md-10">
            @if (owner.Count() == 0 || corp.Count() == 0 || ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    <a href="#" class="close" data-dismiss="alert" aria-label="Close">&times;</a>
                    @if (corp.Count() == 0)
                    {
                        <p>The CorporateMasterList table is empty.</p>
                    }
                    else
                    {
                        <p>The OwnerList table is empty.</p>
                    }
                    <p>@ViewBag.Error</p>
                </div>
            }
            <div class="panel panel-primary box-panel-admin">
                <div class="panel-heading">
                    <p class="text-uppercase text-bold">Corp_Owners</p>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.corpOwnerID)
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            @Html.Label("CORPORATE", htmlAttributes: new { @class = "control-label" })
                                            @Html.DropDownList("corpID", null, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.corpID, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            @Html.Label("OWNER", htmlAttributes: new { @class = "control-label" })
                                            @Html.DropDownList("OwnersID", null, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.OwnersID, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="text-center">
                                <div class="form-group">
                                    <button type="submit" value="" class="btn btn-primary">Save</button>
                                    <a href="@Url.Action("Index")" class="btn btn-danger"><i class="fa fa-ban"></i> Cancel</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    $(document).ready(function () {
        var countCorp = @corp.Count();
        var countOwner = @owner.Count();
        if (countCorp == 0 || countOwner == 0) {
            $('#btnCreate').prop('disabled',true);
        }
        else {
            $('#btnCreate').prop('disabled',false);
        }
    });
</script>