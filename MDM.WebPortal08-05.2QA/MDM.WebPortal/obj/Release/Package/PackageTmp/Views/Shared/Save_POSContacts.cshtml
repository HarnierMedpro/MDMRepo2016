@model MDM.WebPortal.Areas.Credentials.Models.ViewModel.VMMasterPOS_Contact

<div class="container-fluid">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.MasterPOS_MasterPOSID)
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-12">
                    <fieldset class="scheduler-border">
                        <legend class="scheduler-border">CONTACTS: <sup class="text-danger">*</sup></legend>
                        @(Html.EditorFor(model => model.Contacts))
                    </fieldset>
                </div>
            </div>

            <div class="pull-right">
                <div class="form-group">
                    <button type="submit" class="btn btn-ar btn-primary">
                        <i class="fa fa-cloud-upload"></i> Save
                    </button>
                </div>
            </div>

        </div>
    }

</div>

