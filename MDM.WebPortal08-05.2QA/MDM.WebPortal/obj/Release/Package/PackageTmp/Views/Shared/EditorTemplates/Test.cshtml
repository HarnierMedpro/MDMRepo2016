@model MDM.WebPortal.Areas.ADP.Models.VMEdgemed_Logons


<div class="demo-section k-content">
    <h4>Find a product</h4>
    @(Html.Kendo().AutoComplete()
          .Name("id")
          .DataTextField("Info")
          .Filter("contains")
          .MinLength(3)
          .HtmlAttributes(new {style = "width:100%"})
          .DataSource(source =>
          {
              source.Read(read =>
              {
                  read.Action("GetAdps", "Edgemed_Logons")
                      .Data("onAdditionalData");
              })
           .ServerFiltering(true);
          })
          )

</div>
<script>
    function onAdditionalData() {
        return {
            text: $("#id").val()
        };
    }
</script>